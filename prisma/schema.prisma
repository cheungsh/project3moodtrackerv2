generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model mood {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  date        DateTime @db.Date
  exercise    Json?
  hobby       Json?
  meal        Json?
  moodValue   String?
  name        String?
  period      Boolean?
  scannedMood   String?
  scannedStreak      Int
  scannedSuggestion String?
  sleepEnd    DateTime? @db.Date
  sleepHours  Float?
  sleepStart  DateTime? @db.Date
  social      Json?
  streak      Int?
  suggestions String?
  weather     Json?
}