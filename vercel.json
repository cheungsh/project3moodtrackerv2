{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["routes/**", ".env"]
      }
    }
  ],
  "routes": [
    {
      "src": "/mood",
      "dest": "server.js"
    },
    {
      "src": "/scannedMood",
      "dest": "server.js"
    },
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ]
}